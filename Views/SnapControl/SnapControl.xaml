<UserControl x:Class="SnapDotNet.SnapControl.SnapControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:tb="http://www.hardcodet.net/taskbar"
             xmlns:snap="clr-namespace:SnapDotNet.SnapControl"
             xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
             x:Name="SnapControlPane"
             Height="Auto"
             Width="Auto">
    <Grid x:Name="grid"
          PreviewMouseLeftButtonDown="Grid_PreviewMouseLeftButtonDown">
        <Border HorizontalAlignment="Stretch"
                Margin="5,5,5,5"
                BorderThickness="1,1,1,1"
                BorderBrush="{DynamicResource WindowTitleColorBrush}"
                Background="{DynamicResource WindowBackgroundBrush}"
                >

        </Border>
        <StackPanel Orientation="Horizontal" x:Name="spGroups"/>
    </Grid>
</UserControl>